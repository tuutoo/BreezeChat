datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

// 场景配置
model Scene {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEn      String // 英文名称
  description String
  prompt      String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 模型配置
model Provider {
  id            String   @id
  name          String   @unique
  envApiKeyName String   @unique
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  models        Model[]
}

model Model {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  providerId  String   // 关联的提供商 ID
  provider    Provider @relation(fields: [providerId], references: [id])
  modelId     String   // 提供商内部的模型 ID，例如：gpt-4, qwen-32b
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
