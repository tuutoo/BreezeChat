datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

// API 类型定义
model ApiType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  fields      Json     // 存储字段定义
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Prompt 模板
model PromptTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEn      String   // 英文名称
  description String
  content     String   // prompt 内容
  category    String   // 分类，如 "translation", "chat" 等
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 场景配置
model Scene {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEn      String   // 英文名称
  description String
  prompt      String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 模型配置
model Model {
  id          String   @id @default(cuid())
  name        String   @unique
  provider    String   // 如 "groq", "openai", "google" 等
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
